<!-- app/views/payments/index.html.erb -->

<h1 class="header">Payments</h1>

<table>
  <thead>
    <tr>
      <th>Lease</th>
      <th>Payment Date</th>
      <th>Amount</th>
      <th>Balance</th>
      <th>Months Covered</th>
      <th>Amunt Carried Forward</th>
      <th>Amount Due Next Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.lease.lease_description %></td>
        <td><%= payment.payment_date %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.balance %></td>
        <td><%= payment.months_covered %></td>
        <td><%= payment.balance_carried_forward %></td>
        <td><%= payment.amount_due_next_month %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Payment', new_payment_path %>
