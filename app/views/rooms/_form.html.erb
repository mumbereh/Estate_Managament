<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="show-container">
  <div class="field">
    <%= form.label :room_number %>
    <%= form.text_field :room_number %>
  </div>

  <div class="field">
    <%= form.label :room_type_id, "Room Type" %>
    <%= form.collection_select :room_type_id, RoomType.all, :id, :status_name, prompt: "Select Room Type" %>
  </div>

  <div class="field">
    <%= form.label :estate_id, "Estate" %>
    <%= form.collection_select :estate_id, Estate.all, :id, :name, prompt: "Select Estate" %>
  </div>

  <div class="price" id="price">
  <%= form.label :price %>
  <%= form.number_field :price %>
</div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
