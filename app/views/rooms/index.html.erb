<h1 class="header">Rooms</h1>
<table>
  <thead>
    <tr>
      <th>Room Number</th>
      <th>RoomType</th>
      <th>Price</th>
      <th>Estate</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.room_type.status_name %></td>
         <td><%= room.price %></td>
        <td><%= room.estate.name %></td>
        <td><%= link_to 'Details', room, class: "btn btn-info" %></td>
        <td><%= link_to 'Update', edit_room_path(room), class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Room', new_room_path, class: "btn btn" %>
