<%= form_with(model: @lease, local: true) do |form| %>
  <% if @lease.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lease.errors.count, "error") %> prohibited this lease from being saved:</h2>

      <ul>
        <% @lease.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: 'datepicker' %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: 'datepicker' %>
  </div>

  <div class="field">
    <%= form.label :room_id %>
    <%= form.collection_select :room_id, Room.all, :id, :room_number, prompt: "Select Room" %>
  </div>

  <div class="field">
    <%= form.label :tenant_id %>
    <%= form.collection_select :tenant_id, Tenant.all, :id, :full_name, prompt: "Select Tenant" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
