<!DOCTYPE html>
<html>
<head>
  <title>Estate Management System</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <nav class="navbar">
      <%= link_to 'E.M System', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" aria-label="Toggle navigation">
        &#9776;
      </button>
      <ul class="navbar-nav">
       <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        <li class="nav-item">
          <%= link_to 'Estates', estates_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Room Types', room_types_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Rooms', rooms_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Tenants', tenants_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Leases', leases_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
        <%= link_to 'payments', payments_path, class: 'nav-link' %>
      </li>
        <li class="nav-item">
          <%= link_to 'Reports', reports_path, class: 'nav-link' %>
        </li>
      </ul>
    </nav>
  </header>
  
  <div class="container mt-4">
    <%= yield %>
  </div>

  <script>
    document.querySelector('.navbar-toggler').addEventListener('click', function() {
      document.querySelector('.navbar-nav').classList.toggle('active');
    });
  </script>
</body>
</html>
