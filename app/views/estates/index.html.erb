<!-- app/views/estates/index.html.erb -->
<h1 class="header">Estates</h1>

<%= link_to 'New Estate', new_estate_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Owner</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @estates.each do |estate| %>
      <tr>
        <td><%= link_to estate.name, tenants_estate_path(estate) %></td>
        <td><%= estate.location %></td>
        <td><%= estate.owner %></td>
        <td><%= estate.description %></td>
        <td><%= link_to 'Show', estate %></td>
        <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
        <td><%= link_to 'Destroy', estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
