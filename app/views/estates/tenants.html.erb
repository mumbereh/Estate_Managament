<h1 class="header">Tenants</h1>
<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Home District</th>
      <th>Village</th>
      <th>Next of Kin</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.full_name %></td>
        <td><%= tenant.email %></td>
        <td><%= tenant.home_district %></td>
        <td><%= tenant.village %></td>
        <td><%= tenant.next_of_kin %></td>
        <td><%= tenant.room.room_number %></td>
        <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Tenant', new_tenant_path %>

<%= paginate @estates %>