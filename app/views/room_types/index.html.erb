<h1 class="header">Room Types</h1>

<table>
  <thead>
    <tr>
      <th>Status Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_types.each do |room_type| %>
      <tr>
        <td><%= room_type.status_name %></td>
        <td><%= room_type.description %></td>
        <td><%= link_to 'Show', room_type, class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_room_type_path(room_type), class: "btn btn-waring" %></td>
        <td><%= link_to 'Destroy', room_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to 'Add Room Type', new_room_type_path, class: 'btn btn-succe' %>

