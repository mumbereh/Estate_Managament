<h1 class="header">Tenant Report for <%= @tenant.full_name %></h1>

<h2>Tenant Details</h2>
<p><strong>Full Name:</strong> <%= @tenant.full_name %></p>
<p><strong>Email:</strong> <%= @tenant.email %></p>
<p><strong>Home District:</strong> <%= @tenant.home_district %></p>
<p><strong>Village:</strong> <%= @tenant.village %></p>

<h2>Leases</h2>
<table>
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Monthly Rent</th>
      <th>Total Payments</th>
    </tr>
  </thead>
  <tbody>
    <% @leases.each do |lease| %>
      <tr>
        <td><%= lease.start_date %></td>
        <td><%= lease.end_date %></td>
        <td><%= number_to_currency(lease.monthly_rent) %></td>
        <td><%= number_to_currency(lease.total_amount_paid) %></td>
        <td><%= number_to_currency(lease.total_amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Payments</h2>
<table>
  <thead>
    <tr>
      <th>Payment Date</th>
      <th>Amount</th>
      <th>Lease Period</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payment_date %></td>
        <td><%= number_to_currency(payment.amount) %></td>
        <td><%= "#{payment.lease.start_date} - #{payment.lease.end_date}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>