<h1 class="header">Tenant Details</h1>

<div class="card mb-4">
  <div class="card-body">
  <div class="show_container">
<p>
  <strong>Full Name:</strong>
  <%= @tenant.full_name %>
</p>
<p>
  <strong>Email:</strong>
  <%= @tenant.email %>
</p>
<p>
  <strong>Home District:</strong>
  <%= @tenant.home_district %>
</p>
<p>
  <strong>Village:</strong>
  <%= @tenant.village %>
</p>
<p>
  <strong>Next of Kin:</strong>
  <%= @tenant.next_of_kin %>
</p>
<p>
  <strong>Room:</strong>
  <%= @tenant.room.room_number %>
</p>
</div>
<%= link_to 'Edit', edit_tenant_path(@tenant), class: 'btn btn-warning mr-2' %> |
<%= link_to 'Back', tenants_path, class: 'btn btn-secondary' %>
</div>