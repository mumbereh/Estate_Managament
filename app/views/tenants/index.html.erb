<h1 class="header">Tenants</h1>
<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Home District</th>
      <th>Village</th>
      <th>Next of Kin</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @tenants.present? %>
      <% @tenants.each do |tenant| %>
        <tr>
          <td><%= tenant.full_name %></td>
          <td><%= tenant.email %></td>
          <td><%= tenant.home_district %></td>
          <td><%= tenant.village %></td>
          <td><%= tenant.next_of_kin %></td>
          <td><%= tenant.room.room_number %></td>
          <td><%= link_to 'Details', tenant, class: 'btn btn-info' %></td>
          <td><%= link_to 'Update', edit_tenant_path(tenant), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Delete', tenant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="7">No tenants found for this estate.</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Tenant', new_tenant_path, class: "btn btn-primary" %>
